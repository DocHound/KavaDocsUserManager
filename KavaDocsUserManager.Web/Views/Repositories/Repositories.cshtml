@model KavaDocsUserManager.Web.Views.Repositories.RepositoriesListViewModel

@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-container">
    <h1 class="page-header-text">
        <i class="fa fa-sign-in"></i>
        Repositories
    </h1>


    <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action active">
            Repositories
        </a>
        
        @foreach (var repo in Model.Repositories)
        {

            <a asp-action="Repository" asp-route-id="@repo.Id"
               class="repository-list-item list-group-item list-group-item-action">
                <div class="repository-list-item-title">@repo.Title</div>
                <div class="repository-list-item-content">@repo.Description</div>
            </a>
        }

    </div>
</div>